<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:layout_margin="10dp"
    android:background="@drawable/card_edge">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tarjeta_cotizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:weightSum="1">

                <TextView
                    android:id="@+id/text_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="1">

                <LinearLayout
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/text_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:layout_weight="0.6"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="1dp"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/text_validez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="10sp"
                        android:layout_weight="0.4"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginStart="1dp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/text_monto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text=""
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:layout_marginTop="2dp"
                        android:textSize="15sp"
                        android:layout_weight="0.4"/>

                    <TextView
                        android:id="@+id/text_plazo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text=""
                        android:gravity="right"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:layout_weight="0.2"/>

                    <TextView
                        android:id="@+id/text_tipo_amortizacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text=""
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:layout_weight="0.4"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorWhite"
                android:weightSum="1">

                <Button
                    android:id="@+id/btnPdf"
                    android:text="@string/accion_pdf"
                    android:padding="0dp"
                    android:background="@color/colorWhite"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:srcCompat="@drawable/editar_blue"/>

            </TableRow>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
