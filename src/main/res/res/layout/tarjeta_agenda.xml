<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tarjeta_agenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/foto_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/descripcion_logo"
                app:srcCompat="@drawable/cliente" />

            <TextView
                android:id="@+id/nombre_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/foto_cliente"
                android:layout_toRightOf="@+id/foto_cliente"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/colocado_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_cliente"
                android:layout_toEndOf="@+id/foto_cliente"
                android:layout_toRightOf="@+id/foto_cliente"
                android:layout_marginRight="15dp"
                android:text="10,000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dispuesto_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colocado_cliente"
                android:layout_toEndOf="@+id/foto_cliente"
                android:layout_toRightOf="@+id/foto_cliente"
                android:layout_marginRight="15dp"
                android:text="10,000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pagado_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dispuesto_cliente"
                android:layout_toEndOf="@+id/foto_cliente"
                android:layout_toRightOf="@+id/foto_cliente"
                android:layout_marginRight="15dp"
                android:text="10,000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/saldo_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pagado_cliente"
                android:layout_toEndOf="@+id/foto_cliente"
                android:layout_toRightOf="@+id/foto_cliente"
                android:layout_marginRight="15dp"
                android:text="10,000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vencido_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saldo_cliente"
                android:layout_toEndOf="@+id/foto_cliente"
                android:layout_toRightOf="@+id/foto_cliente"
                android:layout_marginRight="15dp"
                android:text="10,000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/por_vencer_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vencido_cliente"
                android:layout_toEndOf="@+id/foto_cliente"
                android:layout_toRightOf="@+id/foto_cliente"
                android:layout_marginRight="15dp"
                android:text="10,000"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
