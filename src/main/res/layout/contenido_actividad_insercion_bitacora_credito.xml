<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_superior_item_lista"
    android:background="@color/colorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:rowCount="11"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.ActividadInsercionBitacoraCredito"
        tools:showIn="@layout/actividad_insercion_bitacora_credito">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mascara_campo_asunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1">

            <EditText
                android:id="@+id/campo_asunto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bakground"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/colorGray2"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/hint_campo_texto_asunto"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mascara_campo_numero_amortizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="2">

            <EditText
                android:id="@+id/campo_numero_amortizacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bakground"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/colorGray2"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/hint_campo_texto_numero_amortizacion"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mascara_campo_detalles_pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="3">

            <EditText
                android:id="@+id/campo_detalles_pago"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bakground"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/colorGray2"
                android:lines="4" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="@string/hint_campo_texto_detalles_pago"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mascara_campo_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="4">

            <EditText
                android:id="@+id/campo_descripcion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bakground"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/colorGray2"
                android:lines="4" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/hint_campo_texto_descripcion"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorGray2"
            android:background="@color/colorWhite" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mascara_campo_valor_garantia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="5">

            <com.softcredito.app.inputs.CurrencyEditText
                android:id="@+id/campo_valor_garantia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bakground"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/colorGray2"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:text="@string/hint_campo_texto_valor_garantia"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mascara_campo_descripcion_garantia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="6">

            <EditText
                android:id="@+id/campo_descripcion_garantia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bakground"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/colorGray2"
                android:lines="4" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:text="@string/hint_campo_texto_descripcion_garantia"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorWhite" />

    </GridLayout>
</ScrollView>